<!DOCTYPE html>
<html>
  <head>
    <title>BlogPrework</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Blog</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-link">            
              <%= link_to 'Create Post', new_post_path %>
            </li>
            <li class="nav-link">            
              <%= link_to 'Sign Out',  destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="<%=new_user_session_path%>">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%=new_user_registration_path%>">Sign Up</a>
            </li>
          <%end%>
        </ul>
        <form class="form-inline my-2 my-lg-0">
         <!-- <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> -->
          <%= form_tag(posts_path, method: 'get', id: 'search_form') %>
          <%= text_field_tag :search, params[:search], placeholder: 'Search Post' %>
          <%= submit_tag "Search" %>
        </form>
      </div>
    </nav>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
